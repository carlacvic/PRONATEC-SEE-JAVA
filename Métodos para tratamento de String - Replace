public class main
{
    public static void main(String[] args)
    {
        /*Métodos para strings com passagem de parâmetro:            
            replace() - substitui caraceteres ou strings dentro de uma string.            
        */

        String nome = "Maria das Dores Hortência de Oliveira";
        
        System.out.println("Nome sem alteração                 :" +nome);
        System.out.println("Nome com substituição por caracter :" +nome.replace('a','@'));
        System.out.println("Nome com substituição por string   :" +nome.replace("Maria","Mário"));
    }
}
