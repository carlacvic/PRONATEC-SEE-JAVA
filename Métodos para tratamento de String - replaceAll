public class main
{
    public static void main(String[] args)
    {
        /*Métodos para strings com passagem de parâmetro:            
            replaceAll() - substitui todas as ocorrências de um caractere ou string dentro de uma string.            
        */

        String nome = "Maria das Dores Hortência Maria";
        
        System.out.println("Nome sem alteração                 :" +nome);
        System.out.println("Nome com substituição por caracter :" +nome.replaceAll("a","@"));
        System.out.println("Nome com substituição por string   :" +nome.replaceAll("Maria","Mário"));
    }
}
