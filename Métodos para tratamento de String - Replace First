public class main
{
    public static void main(String[] args)
    {
        /*Métodos para strings com passagem de parâmetro:            
            replaceFirst() - substitui a primeira ocorrência de um caractere ou string dentro de uma string.            
        */

        String nome = "Maria das Dores Hortência de Oliveira";
        
        System.out.println("Nome sem alteração                 :" +nome);
        System.out.println("Nome com substituição por caracter :" +nome.replaceFirst("a","@"));
        System.out.println("Nome com substituição por string   :" +nome.replaceFirst("Maria","Mário"));
    }
}
